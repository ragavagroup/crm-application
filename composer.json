{
  "name": "oro/crm-enterprise-application",
  "description": "The OroCRM Enterprise Application",
  "homepage": "https://github.com/orocrm/crm-enterprise-application.git",
  "license": "Commercial",
  "autoload": {
    "psr-4": {"": "src/"},
    "exclude-from-classmap": ["**/Tests/"]
  },
  "repositories": {
    "ldap-bundle": {
      "type": "vcs",
      "url": "https://github.com/orocrm/OroCRMProLDAPBundle.git"
    },
    "platform-enterprise": {
      "type": "vcs",
      "url": "https://github.com/orocrm/platform-enterprise.git"
    },
    "enterprise": {
      "type": "vcs",
      "url": "https://github.com/orocrm/crm-enterprise.git"
    },
    "crm": {
      "type": "vcs",
      "url": "https://github.com/orocrm/crm-er.git"
    },
    "platform": {
      "type": "vcs",
      "url": "https://github.com/orocrm/platform-er.git"
    },
    "composer": {
      "type": "composer",
      "url": "https://packagist.orocrm.com"
    }
  },
  "require": {
    "oro/crm-enterprise": "1.x-dev",
    "oro/platform-serialised-fields": "1.x-dev",
    "oro/crm-hangouts-call-bundle": "1.x-dev",
    "oro/crm-abandoned-cart": "1.x-dev",
    "oro/crm-magento-embedded-contact-us": "1.x-dev",
    "oro/crm-mail-chimp": "1.x-dev",
    "oro/crm-dotmailer": "1.x-dev",
    "oro/crm-zendesk": "1.x-dev",
    "oro/crm-pro-ldap-bundle": "1.x-dev"
  },
  "require-dev": {
    "sensio/generator-bundle": "3.1.2",
    "behat/behat": "3.2.2",
    "behat/mink-extension": "2.2.*",
    "behat/mink-selenium2-driver": "1.*",
    "behat/symfony2-extension": "2.1.1",
    "nelmio/alice": "2.2.*",
    "phpunit/phpunit": "5.7.*",
    "phpunit/phpunit-selenium": "3.0.*",
    "johnkary/phpunit-speedtrap": "1.0.*",
    "mybuilder/phpunit-accelerator": "1.2.*",
    "squizlabs/php_codesniffer": "2.8.*",
    "phpmd/phpmd": "2.6.*",
    "sebastian/phpcpd": "2.0.*"
  },
  "config": {
    "component-dir": "web/bundles/components",
    "bin-dir": "bin",
    "fxp-asset": {
      "asset-installer-paths": {
        "npm-asset-library": "web/bundles/npmassets",
        "bower-asset-library": "web/bundles/bowerassets"
      }
    }
  },
  "scripts": {
    "post-install-cmd": [
      "Oro\\Bundle\\InstallerBundle\\Composer\\ScriptHandler::checkComposerPlugin",
      "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
      "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
      "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
      "Oro\\Bundle\\InstallerBundle\\Composer\\ScriptHandler::setPermissions",
      "Oro\\Bundle\\InstallerBundle\\Composer\\ScriptHandler::installAssets",
      "Oro\\Bundle\\InstallerBundle\\Composer\\ScriptHandler::setAssetsVersion"
    ],
    "post-update-cmd": [
      "Oro\\Bundle\\InstallerBundle\\Composer\\ScriptHandler::checkComposerPlugin",
      "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
      "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
      "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
      "Oro\\Bundle\\InstallerBundle\\Composer\\ScriptHandler::setPermissions",
      "Oro\\Bundle\\InstallerBundle\\Composer\\ScriptHandler::installAssets",
      "Oro\\Bundle\\InstallerBundle\\Composer\\ScriptHandler::setAssetsVersion"
    ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "symfony-app-dir": "app",
    "symfony-web-dir": "web",
    "incenteev-parameters": {
      "file": "app/config/parameters.yml"
    },
    "asset-installer-paths": {
      "npm-asset-library": "web/bundles/npmassets",
      "bower-asset-library": "web/bundles/bowerassets"
    }
  }
}
