{
    "name": "oro/crm-enterprise-application",
    "description": "The OroCRM Enterprise Application",
    "homepage": "https://github.com/orocrm/crm-enterprise-application.git",
    "license": "Commercial",
    "autoload": {
        "psr-0": {
            "": "src/"
        }
    },
    "repositories": {
        "TranslationForm": {
            "type": "git",
            "url": "https://github.com/orocrm/TranslationFormBundle.git"
        },
       "platform-enterprise": {
            "type": "vcs",
            "url": "https://github.com/orocrm/platform-enterprise.git"
        },
       "enterprise": {
            "type": "vcs",
            "url": "https://github.com/orocrm/crm-enterprise.git"
        },
        "crm": {
            "type": "vcs",
            "url": "https://github.com/orocrm/crm-er.git"
        },
        "platform": {
            "type": "vcs",
            "url": "https://github.com/orocrm/platform-er.git"
        },
        "composer": {
            "type": "composer",
            "url": "https://packagist.orocrm.com"
        }
    },
    "require": {
        "oro/crm-enterprise": "1.12.*"
    },
    "require-dev": {
        "sensio/generator-bundle": "2.5.3",
        "squizlabs/php_codesniffer": "2.3.3",
        "behat/behat": "3.1.0",
        "behat/mink-extension": "^2.0",
        "behat/mink-selenium2-driver": "1.*",
        "bossa/phpspec2-expect": "~1.0",
        "behat/symfony2-extension": "2.1.1",
        "nelmio/alice": "^2.1"
    },
    "config": {
        "component-dir": "web/bundles/components"
    },
    "scripts": {
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Oro\\Bundle\\InstallerBundle\\Composer\\ScriptHandler::setPermissions",
            "Oro\\Bundle\\InstallerBundle\\Composer\\ScriptHandler::installAssets",
            "Oro\\Bundle\\InstallerBundle\\Composer\\ScriptHandler::setAssetsVersion"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Oro\\Bundle\\InstallerBundle\\Composer\\ScriptHandler::setPermissions",
            "Oro\\Bundle\\InstallerBundle\\Composer\\ScriptHandler::installAssets",
            "Oro\\Bundle\\InstallerBundle\\Composer\\ScriptHandler::setAssetsVersion"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        }
    }
}
