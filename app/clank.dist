#!/bin/bash
#
# Init script for OroCRM websocket service #
# Put it inside /etc/init.d
# Start/Stop Oro websocket service like this:
# /etc/init.d/clank start|stop

# Update this with real path to OroCRM and PHP user
DIR='/var/www/orocrm/crm-enterprise-application'
USER='nginx'

# Call Oro clank script as PHP user
su - $USER -c "cd $DIR; ./app/bin/oro_clankd.sh $1"

# EOF #
